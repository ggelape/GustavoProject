<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/default_margin_half"
    android:paddingStart="@dimen/default_margin_half"
    android:paddingEnd="@dimen/default_margin_half"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/episode"
        style="@style/TextBold"
        android:textSize="@dimen/default_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="E1 -"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/episode_title"
        style="@style/TextBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="It's About Time"
        android:layout_marginStart="@dimen/default_margin_half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/episode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/profile_drawer_responsible_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/default_margin_half"
        app:layout_constraintTop_toBottomOf="@id/episode"
        android:background="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>